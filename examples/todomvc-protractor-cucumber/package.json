{
  "name": "protractor-cucumber",
  "version": "1.0.0",
  "description": "Serenity.js with Protractor and Cucumber",
  "main": "index.js",
  "scripts": {
    "setup": "npm run typings -- install",
    "prepublish": "npm run setup",
    "clean": "rimraf target",
    "lint": "tslint --config ../../tslint.json --project ./tsconfig.json --format stylish",
    "pretest": "serenity update",
    "pree2e": "npm run lint && npm run webdriver:update -- --standalone",
    "e2e": "protractor ./protractor.conf.js --silent",
    "e2e-single": "protractor ./protractor.conf.js --silent  --cucumberOpts.name",
    "report": "serenity run",
    "test": "failsafe e2e report",
    "webdriver-manager": "webdriver-manager",
    "webdriver:update": "npm run webdriver-manager update",
    "typings": "typings"
  },
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-smoothie": "^0.1.2",
    "cucumber": "1.2.2",
    "npm-failsafe": "^0.1.0",
    "protractor": "4.0.13",
    "protractor-cucumber-framework": "0.6.0",
    "rimraf": "2.5.4",
    "serenity-cli": "^0.1.4",
    "serenity-js": "file:../../",
    "ts-node": "1.6.1",
    "tslint": "3.15.1",
    "typescript": "2.0.6",
    "typings": "1.3.0"
  }
}
