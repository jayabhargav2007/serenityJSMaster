{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./staging/transpiled",

    "types": [
      "graceful-fs",
      "lodash",
      "mkdirp",
      "stack-trace",
      "node",
      "selenium-webdriver",

      "chai",
      "chai-as-promised",
      "express",
      "express-serve-static-core",
      "mocha",
      "mock-fs",
      "nock",
      "sinon",
      "sinon-chai"
    ]
  },

  "files": [
    "node_modules/chai-smoothie/lib/chai-smoothie.d.ts",
    "src/serenity-cucumber/cucumber.d.ts"
  ],

  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "examples"
  ]
}